@using T_Camps.Data
@model Company

<!--Site Footer Start-->
<footer class="site-footer">
    <div class="site-footer__shape-1 float-bob-y">
        <img src="/assets/images/shapes/site-footer-shape-1.png" alt="">
    </div>
    <div class="site-footer__top">
        <div class="container">
            <div class="site-footer__top-inner">
                <div class="main-menu__logo">
                    <a asp-controller="Home" asp-action="Index">
                        <h6 data-hover=" Celebrate Life" class="sliding-text__title" style="font-size: xx-large;">
                            T-Camps
                            <img src="/assets/images/icon/star-icon.png" alt="" style="max-width: 100px">
                        </h6>
                    </a>
                </div>
                <div class="site-footer__social">
                    @if (Model.SocialMediaLinks != null)
                    {
                        @foreach (var link in Model.SocialMediaLinks)
                        {
                            if (!string.IsNullOrEmpty(link.Url))
                            {
                                <a href="@link.Url" target="_blank">
                                    @switch (link.Platform)
                                    {
                                        case "Facebook":
                                            <i class="icon-facebook"></i>
                                            break;
                                        case "X":
                                            <i class="icon-fi"></i>
                                            break;
                                        case "Instagram":
                                            <i class="icon-instagram"></i>
                                            break;
                                        case "LinkedIn":
                                            <i class="icon-linkedin-in"></i>
                                            break;
                                        case "YouTube":
                                            <i class="fab fa-youtube"></i>
                                            break;
                                        case "TikTok":
                                            <i class="icon-tiktok"></i>
                                            break;
                                        case "Threads":
                                            <i class="icon-threads"></i>
                                            break;
                                    }
                                </a>
                            }
                        }
                    }
                </div>

            </div>
        </div>
    </div>
    <div class="site-footer__middle">
        <div class="container">
            <div class="site-footer__middle-inner">
                <div class="row">
                    @await (Component.InvokeAsync<T_Camps.ViewComponents.UpcomingEventsViewComponent>())
                    @await (Component.InvokeAsync<T_Camps.ViewComponents.ContactsViewComponent>())
                        </div>
                    </div>
                </div>
            </div>
    <div class="site-footer__bottom">
        <div class="container">
            <div class="site-footer__bottom-inner">
                <p class="site-footer__bottom-text">© T-Camps 2025 | Всички права запазени</p>
                <ul class="list-unstyled site-footer__bottom-menu">
                    <li><a asp-controller="Home" asp-action="Privacy" target="_blank">Условия за ползване</a></li>
                    <li><a asp-controller="Home" asp-action="InfoNpo" target="_blank">Информация за НПО </a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
<!--Site Footer End-->