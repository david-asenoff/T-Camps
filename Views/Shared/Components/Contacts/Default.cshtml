@model T_Camps.ViewModels.ContactViewModel
@{
    Layout = null;
}
<div class="footer-widget__contact-inner">
    <ul class="footer-widget__contact-list list-unstyled">
        <li>
            <div class="icon">
                <span class="icon-envelop"></span>
            </div>
            <div class="text">
                <p>
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </p>
            </div>
        </li>
        <li>
            <div class="icon">
                <span class="icon-pin"></span>
            </div>
            <div class="text">
                <p>@Model.X</p>
            </div>
        </li>
        <li>
            <div class="icon">
                <span class="icon-call"></span>
            </div>
            <div class="text">
                <p><a href="tel:@Model.Facebook">@Model.PhoneNumber</a></p>
            </div>
        </li>
    </ul>
</div>
