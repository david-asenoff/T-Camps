@model IEnumerable<T_Camps.ViewModels.EventViewModel>
@{
    Layout = null;
}
<div class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="100ms">
    <div class="footer-widget__column footer-widget__events">
        <div class="footer-widget__title-box">
            <h3 class="footer-widget__title">Предстоящи събития</h3>
        </div>
        <ul class="footer-widget__events-list list-unstyled">
            @foreach (var x in Model)
            {
            <li>
                <p>@x.Date</p>
                <h5>@x.Title</h5>
                <a href="@x.Url">
                    Детайли <span class="icon-arrow-right"></span>
                </a>
            </li>
        }
        </ul>
    </div>
</div>
