   @model IEnumerable<T_Camps.ViewModels.ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

<h2>Clients</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Phone</td>
                <td>@client.Email</td>
                <td>@client.Description</td>
            </tr>
        }
    </tbody>
</table>