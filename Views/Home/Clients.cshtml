@model IEnumerable<T_Camps.ViewModels.ClientViewModel>

@{
    ViewData["Title"] = "Clients";
}

<h3>Clients</h3>

<table class="table-striped table-bordered" style="background-color: white !important">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td>@client.Description</td>
            </tr>
        }
    </tbody>
</table>