@model T_Camps.Data.ContactFormSubmission

@{
    ViewData["Title"] = "Контактна форма";
}

<section class="contact-one py-5">
    <div class="container">
        <div class="contact-one__inner">
            <h3 class="contact-one__title">Свържи се с нас</h3>
            <p class="contact-one__text">
                Сподели своя въпрос или желание да се включиш в нашата кауза!
            </p>

            <!-- Success Message -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3 mb-4" style="font-size: 1.1rem;">
                    @TempData["Message"]
                </div>
            }

            <!-- Begin Form -->
            <form asp-action="Contact" method="post" class="contact-one__form">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-xl-6 col-lg-6">
                        <div class="contact-one__input-box">
                            <input asp-for="Name" class="form-control" placeholder="Имена" />
                            <span asp-validation-for="Name" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6">
                        <div class="contact-one__input-box">
                            <input asp-for="Email" class="form-control" placeholder="Ел. поща" />
                            <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6">
                        <div class="contact-one__input-box">
                            <input asp-for="Phone" class="form-control" placeholder="Телефонен номер" />
                            <span asp-validation-for="Phone" class="text-danger small d-block mt-1"></span>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6">
                        <div class="contact-one__input-box">
                            <div class="select-box">
                                <select asp-for="Topic" class="form-select">
                                    <option value="">-- Изберете тема --</option>
                                    <option>Участие в събитие</option>
                                    <option>Стани член на Т-Кампс</option>
                                    <option>Подкрепи като Спонсор</option>
                                    <option>Друго</option>
                                </select>
                                <span asp-validation-for="Topic" class="text-danger small d-block mt-1"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-12">
                        <div class="contact-one__input-box text-message-box">
                            <textarea asp-for="Message" class="form-control" placeholder="Вашето съобщение..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small d-block mt-1"></span>
                        </div>
                        <div class="contact-one__btn-box">
                            <button type="submit" class="thm-btn contact-one__btn">
                                Изпрати сега <span class="icon-arrow-right"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Required for validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
